<!doctype html>
  <head>
    <meta charset="utf-8">
    <title>DamStat</title>
    <link rel="stylesheet" media="screen, projection" href="stylesheets/screen.css" type="text/css" />
  </head>

  <body>
    <div id="main">
      <div>
        <div id="homepage" style="">
          <div class="leather">
            <header>
              <% if (locals.message) { %>
                    <h2><%= message %></h2>
                  <% } else { %>
                    <h2>Get notified when we release</h2>
                    <form action="/send_email" method="post"> 
                      <input type="text" name="email" placeholder="Your email" />
                      <button>Sign up</button>
                    </form>
              <% } %>
              </div>
              </div>
            </header>
            <div class="footer">
            </div>
          </div>
      </div>
    </div>

  </body>
</html>
